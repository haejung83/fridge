<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/common_vertical_padding"
    android:paddingTop="@dimen/common_vertical_padding">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/common_horizontal_margin"
        android:layout_marginStart="@dimen/common_horizontal_margin"
        android:src="@drawable/img_food_placeholder"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/imageView"
        android:hint="Item" />

    <TextView
        android:id="@+id/textTitleSeparate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/textTitle"
        android:text="/"/>

    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/textTitleSeparate"
        android:hint="Quantity"/>

    <TextView
        android:id="@+id/textValidationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@id/imageView"
        android:hint="Best Before:" />

    <TextView
        android:id="@+id/textValidationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@id/textValidationTitle"
        android:hint="2016.05.26" />

    <TextView
        android:id="@+id/textValidationBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:minWidth="20dp"
        android:gravity="center_horizontal"
        android:text="D-1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_rounded_rect_red"/>
</RelativeLayout>
